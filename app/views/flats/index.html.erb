<h1>All our Flats</h1>

  <div class="cards-grid">
    <% @flats.each do |flat| %>
    <div class="card-container">
      <div class="card">
          <img src="https://plus.unsplash.com/premium_photo-1684175656320-5c3f701c082c?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTd8fGFwcGFydGVtZW50fGVufDB8fDB8fHww" alt="Light & Spacious Garden Flat" class="card-image">
        <div class="card-content">
          <h2 class="card-title"><%= flat.name %></h2>
          <p class="card-subtitle"><%= flat.address %></p>
        </div>
        <div class="guests-price d-flex align-items-baseline" style="position: absolute; bottom: 10%; width: 100%;">
          <p class="card-text fa-solid fa-users-line" style="margin-right: 10px;"> <%= flat.number_of_guests %></p>
          <p style="font-weight: bold; font-size: larger;"> â‚¬<%= flat.price_per_night %></p>
        </div>

        <div class="btns d-flex justify-content-between align-items-end" style="position: absolute; bottom: 0; width: 100%;">
          <a href="<%= flat_path(flat) %>" class="card-button">More info</a>
          <a href="localhost:3000/flats/1" class="card-button">Edit</a>
          <a href="localhost:3000/flats/1" class="card-button">Remove</a>
        </div>

      </div>
    </div>
    <% end %>
  </div>
